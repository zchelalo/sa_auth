{
  "name": "template_typescript_express",
  "version": "1.0.0",
  "description": "Template for a typescript express project, using hexagonal architecture",
  "main": "./src/main.ts",
  "type": "module",
  "scripts": {
    "proto:generate": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=src/proto --ts_proto_opt=outputServices=grpc-js,env=node --proto_path=sa_proto sa_proto/auth/service.proto",
    "create:envs": "bash ./scripts/create_envs.sh",
    "create:certs": "bash ./scripts/create_certs.sh",
    "create:docs": "typedoc --entryPointStrategy expand ./src --name 'App' --out docs",
    "compose": "docker compose -f ./.dockers/docker-compose.yml up",
    "compose:build": "docker compose -f ./.dockers/docker-compose.yml up --build",
    "compose:down": "docker compose -f ./.dockers/docker-compose.yml down",
    "migration:generate": "docker exec -it app npx drizzle-kit generate --config=./src/data/drizzle/config/drizzle_kit.ts",
    "migration:push": "docker exec -it app npx tsx ./src/data/drizzle/config/migrate.ts",
    "migration:seed": "docker exec -it app npx tsx ./src/data/drizzle/config/seed.ts",
    "migrate": "npm run migration:generate && npm run migration:push",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles || true",
    "dev": "nodemon"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.11.2",
    "@grpc/proto-loader": "^0.7.13",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.24.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-proto": "^2.2.0",
    "tsx": "^4.17.0",
    "typedoc": "^0.26.5",
    "typescript": "^5.5.4"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "outputPath": "./coverage/test-report.html"
        }
      ]
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "setupFiles": [
      "./src/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./node_modules",
      "./dist",
      "./endpoints",
      "./DB",
      "./.dockers"
    ]
  }
}
